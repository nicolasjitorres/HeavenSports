<%- include ('../partials/head')%>

<link rel="stylesheet" href="/css/register.css">
<title>Registrarme</title>

</head>

<body>

  <!-- ENCABEZADO -->
  <%- include ('../partials/header')%>

  <!-- PRINCIPAL -->
  <main>


    <!-- Formulario registro -->
    <div class="contenedor-form">
      <h4 class="titulo">Registrate</h4>
      <form action="/users/register" method="POST" enctype="multipart/form-data">

        <!-- NOMBRE USUARIO -->
        <div class="box">
          <input type="text" name="nombre" id="nombre" value=<%= locals.usuario ? usuario.nombre : "" %>>
          <label for="nombre">Nombre</label>
        </div>
        <% if (locals.errors) { %>
        <% const nombreError = errors.find(error => error.path == 'nombre'); %>
        <% if (nombreError) { %>
        <h6 style="color: red;"><%= nombreError.msg %></h6>
        <% } %>
        <% } %>

        <!-- APELLIDO USUARIO -->
        <div class="box">
          <input type="text" name="apellido" id="apellido" value=<%= locals.usuario ? usuario.apellido : "" %>>
          <label for="apellido">Apellido</label>
        </div>
        <% if (locals.errors) { %>
        <% const apellidoError = errors.find(error => error.path == 'apellido'); %>
        <% if (apellidoError) { %>
        <h6 style="color: red;"><%= apellidoError.msg %></h6>
        <% } %>
        <% } %>

        <!-- TELEFONO USUARIO -->
        <div class="box">
          <input type="number" name="telefono" id="telefono" value=<%= locals.usuario ? usuario.telefono : "" %>>
          <label for="telefono">Telefono</label>
        </div>

        <!-- EMAIL USUARIO -->
        <div class="box">
          <input type="email" name="email" id="email" value=<%= locals.usuario ? usuario.email : "" %>>
          <label for="email">Email</label>
        </div>
        <% if (locals.errors) { %>
        <% const emailError = errors.find(error => error.path == 'email'); %>
        <% if (emailError) { %>
        <h6 style="color: red;"><%= emailError.msg %></h6>
        <% } %>
        <% } %>

        <!-- CONTRASEÑA USUARIO -->
        <div class="box">
          <input type="password" name="contrasena" id="contrasena">
          <label for="contrasena">Contraseña</label>
        </div>
        <% if (locals.errors) { %>
        <% const contrasenaError = errors.find(error => error.path == 'contrasena'); %>
        <% if (contrasenaError) { %>
        <h6 style="color: red;"><%= contrasenaError.msg %></h6>
        <% } %>
        <% } %>

        <!-- CONTRASEÑA CONFIRMADA USUARIO -->
        <div class="box">
          <input type="password" name="reContrasena" id="re-contrasena">
          <label for="re-contrasena">Repetir contraseña</label>
        </div>

        <!-- CARGAR IMAGENE PERFIL -->
        <div class="box box-img">
          <label for="img" class="label-img">Cargar foto de perfil</label>
          <input class="input-image" type="file" id="img" name="imagen" accept=".jpeg, .png, .jpg">
        </div>
        <div class="botones">
          <!-- Boton carga -->
          <button type="submit" class="boton">Guardar</button>

          <a href="/">Cancelar</a>
        </div>

      </form>
    </div>
  </main>
  <!-- PIE DE PAGINA -->
  <%- include ('../partials/footer')%>


</body>

</html>