<%- include ('../partials/head')%>

<link rel="stylesheet" href="/css/login.css">

<title>Login</title>
</head>

<body>

  <!-- ENCABEZADO -->

  <%- include ('../partials/header')%>

  <!-- PRINCIPAL -->
  <main>


    <!-- Formulario registro -->
    <div class="contenedor-form">
      <h4 class="titulo">Iniciá Sesión</h4>
      <form action="/users/signIn" method="POST">

        <!-- EMAIL USUARIO -->
        <div class="box <%= locals.errors && errors.email ? 'errorBox' : null %>">
          <input type="email" name="email" id="email" value="<%= locals.old && old.email ? old.email : "" %>" required>
          <label for="email">Email</label>
          <% if (locals.errors && errors.email) { %>
            <div class="msgError">
              <%= errors.email.msg %>
            </div>
          <% } %>
        </div>

        <!-- CONTRASEÑA USUARIO -->
        <div class="box <%= locals.errors && errors.contrasena ? 'errorBox' : null %>">
          <input type="password" name="contrasena" id="contrasena" required>
          <label for="contrasena">Contraseña</label>
          <% if (locals.errors && errors.contrasena) { %>
            <div class="msgError">
              <%= errors.contrasena.msg %>
            </div>
          <% } %>
        </div>

        <% if (locals.error) { %>
          <p style="color: red; text-align: center; padding: 0 0 15px;"><%= error %></p>
        <%} %>

        <!-- RECORDAR USUARIO -->
        <div class="box-recordar">
          <input type="checkbox" name="recordar" id="recordar">
          <label for="recordar" class="label-recordar">Recuérdame</label>
        </div>

        
        <div class="botones">
          <!-- Boton carga -->
          <button type="submit" class="boton">Ingresar</button>
        </div>

        
        <!-- RECORDAR USUARIO -->
        <a class="link-registro" href="/users/register">¿Todavía no tienes una cuenta? Registrate</a>

      </form>
    </div>
  </main>

  <!-- PIE DE PAGINA -->

  <%- include ('../partials/footer')%>

</body>

</html>