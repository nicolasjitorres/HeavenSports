<%- include ('../partials/head')%>

<link rel="stylesheet" href="/css/productEdit.css">
<title>Editar producto</title>

</head>

<body>

  <!-- ENCABEZADO -->
  <%- include ('../partials/header')%>

  <!-- PRINCIPAL -->
  <main>


    <!-- Formulario edicion -->
    <div class="contenedor-form">
      <h4 class="titulo">Edicion de producto</h4>

      <form action="/products/<%= producto.id  %>?_method=PUT" method="POST" enctype="multipart/form-data">

        <!-- NOMBRE PRODUCTO -->
        <div class="box">
          <input type="text" name="nombre" id="nombre" required value="<%= producto.nombre %>">
          <label for="nombre">Nombre</label>
        </div>

        <!-- DESCRIPCION PRODUCTO -->
        <div class="box">
          <input type="text" name="descripcion" id="descripcion" required value="<%= producto.descripcion %>"></input>
          <label for="descripcion">Descripci√≥n</label>
        </div>

        <!-- PRECIO PRODUCTO -->
        <div class="box">
          <input type="number" name="precio" id="precio" required value="<%= producto.precio %>">
          <label for="precio">Precio</label>
        </div>

        <!-- DESCUENTO PRODUCTO -->
        <div class="box">
          <input type="number" name="descuento" id="descuento" required value="<%= producto.descuento %>">
          <label for="descuento">Descuento</label>
        </div>

        <!-- MARCA PRODUCTO -->
        <div class="box">
          <select name="id_marca" id="marca" required>
            <% if (locals.mar) { %>
            <% mar.forEach(marca => { %>
            <option value=<%= marca.id %> <%= producto.id_marca == marca.id ? 'selected' : '' %>> <%= marca.nombre %>
            </option>
            <% }); %>
            <% } %>
          </select>
        </div>

        <!-- COLOR PRODUCTO -->
        <div class="box">
          <select name="id_color" id="color" required>
            <% if (locals.col) { %>
            <% col.forEach(color => { %>
            <option value=<%= color.id %> <%= producto.id_color == color.id ? 'selected' : '' %>> <%= color.nombre %>
            </option>
            <% }); %>
            <% } %>
          </select>
        </div>

        <!-- CATEGORIAS VIEJAS PRODUCTO -->
        <div class="box-check" style="display: none;">
          <% if (locals.cat) { %>
          <% cat.forEach(categoria => { %>
          <input type="checkbox" name="categoriasViejas" value=<%= categoria.id %>
            <%= producto.categorias && producto.categorias.some(cat => cat.id == categoria.id) ? 'checked' : '' %>>
          <% }); %>
          <% } %>
        </div>

        <!-- CATEGORIA PRODUCTO -->
        <div class="box-check">
          <label class="box-check-titulo">Categorias</label>
          <% if (locals.cat) { %>
          <% cat.forEach(categoria => { %>
          <input type="checkbox" name="categorias" id=<%=categoria.nombre %> value=<%= categoria.id %>
            <%= producto.categorias && producto.categorias.some(cat => cat.id == categoria.id) ? 'checked' : '' %>>
          <label for=<%=categoria.nombre %> class="label-check">
            <%= categoria.nombre %>
          </label>
          <% }); %>
          <% } %>
        </div>

        <div class="botones">
          <!-- Boton carga -->
          <button type="submit" class="boton">Guardar</button>
          <a href="/products/detail/<%= producto.id %>" class="boton-cancelar">Cancelar</a>
        </div>

      </form>

    </div>
  </main>
  <!-- PIE DE PAGINA -->
  <%- include ('../partials/footer')%>


</body>

</html>